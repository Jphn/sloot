{{#with pageValues}}
<div class="box columns">
    <div class="column is-12" id="equipmentsTable">
        <table class="table is-bordered is-striped is-hoverable is-fullwidth">
            <thead>
                <tr>
                    <th><abbr title="Code">#</abbr></th>
                    <th>Type</th>
                    <th>Subtype</th>
                    <th>Name</th>
                    <th><abbr title="Quantity">Qty</abbr></th>
                    <th>Comments</th>
                </tr>
            </thead>
            <tbody>
                {{#each tableValues}}
                <tr class="clickableRow" id="{{_id}}">
                    <th>{{autoNum @index}}</th>
                    <td>{{type}}</td>
                    <td>{{subtype}}</td>
                    <td>{{name}}</td>
                    <td>{{quantity}}</td>
                    <td>{{comments}}</td>
                </tr>
                {{/each}}
            </tbody>
            <tfoot>
                <tr>
                    <th><abbr title="Code">#</abbr></th>
                    <th>Type</th>
                    <th>Subtype</th>
                    <th>Name</th>
                    <th><abbr title="Quantity">Qty</abbr></th>
                    <th>Comments</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
{{!-- Modals --}}
{{#each tableValues}}
<div class="modal" id="{{_id}}">
    <div class="modal-background"></div>
    <div class="modal-content">
        <div class="box">
            <form action="">
                <div class="field is-horizontal">
                    <div class="field-label is-normal">
                        <label class="label">Information</label>
                    </div>
                    <div class="field-body">
                        <div class="field">
                            <p class="control is-expanded has-icons-left has-icons-right">
                                <input class="input" type="text" placeholder="Type" value="{{type}}" required>
                                <span class="icon is-small is-left">
                                    <i class="fas fa-tags"></i>
                                </span>
                                <span class="icon is-small is-right">
                                    <i class="fas fa-check"></i>
                                </span>
                            </p>
                        </div>
                        <div class="field">
                            <p class="control is-expanded has-icons-left">
                                <input class="input" type="text" placeholder="Subtype" value="{{subtype}}">
                                <span class="icon is-small is-left">
                                    <i class="fas fa-tags"></i>
                                </span>
                            </p>
                        </div>
                    </div>
                </div>

                <div class="field is-horizontal">
                    <div class="field-label is-normal">
                        <label class="label">Name</label>
                    </div>
                    <div class="field-body">
                        <div class="field">
                            <p class="control is-expanded has-icons-left">
                                <input class="input" type="text" placeholder="Name" value="{{name}}" required>
                                <span class="icon is-small is-left">
                                    <i class="fas fa-quote-left"></i>
                                </span>
                            </p>
                        </div>
                    </div>
                </div>

                <div class="field is-horizontal">
                    <div class="field-label is-normal">
                        <label class="label">Quantity</label>
                    </div>
                    <div class="field-body">
                        <div class="field is-narrow">
                            <p class="control is-expanded has-icons-left">
                                <input class="input" type="number" placeholder="Qty" value="{{quantity}}" required>
                                <span class="icon is-small is-left">
                                    <i class="fas fa-hashtag"></i>
                                </span>
                            </p>
                        </div>
                    </div>
                </div>

                <div class="field is-horizontal">
                    <div class="field-label is-normal">
                        <label class="label">Comments</label>
                    </div>
                    <div class="field-body">
                        <div class="field">
                            <div class="control">
                                <textarea class="textarea"
                                    placeholder="Write here any comments about this equipment">{{comments}}</textarea>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="field is-horizontal">
                    <div class="field-label">
                        <!-- Left empty for spacing -->
                    </div>
                    <div class="field-body">
                        <div class="field">
                            <div class="control">
                                <button class="button is-primary">
                                    Send message
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <button class="modal-close is-large" aria-label="close"></button>
</div>
{{/each}}
{{/with}}